@model Services
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">


    <form class="my-5" asp-area="Admin" asp-controller="Services" asp-action="Update" method="post" enctype="multipart/form-data">

        <div class="row mt-3">

            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.Title" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Title</label>
                <input class="form-control" asp-for="@Model.Title">
                <span class="text-danger" asp-validation-for="@Model.Title"></span>
            </div>
        </div>
        <hr>

        <div class="row justify-content-around">

            <div class="mb-3 col-lg-12">
                <label asp-for="@Model.Content" class="form-label">Content</label>
                <textarea id="editor" class="form-control" asp-for="@Model.Content" style="height:300px"></textarea>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-12 d-flex flex-column">
                <label asp-for="@Model.PageFile" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Image</label>
                <img src="~/img/teacher/@Model.PageFile" style=" width: 100px !important; height: 100px !important;" alt="Alternate Text" />
                <input class="form-control" asp-for="@Model.PageFile">
                <span class="text-danger" asp-validation-for="@Model.PageFile"></span>
            </div>
        </div>

        <input type="hidden" asp-for="@Model.Id" />
        <input type="hidden" asp-for="@Model.Page" />


        <button type="submit" class="btn btn-primary">Update</button>
    </form>


</div>
