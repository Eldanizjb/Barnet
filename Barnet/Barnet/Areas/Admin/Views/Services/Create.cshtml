@model Services
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container">


    <form class="my-5" asp-area="Admin" asp-controller="Services" asp-action="Create" method="post" enctype="multipart/form-data">

        <div class="row mt-3">

            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.Title" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Title</label>
                <input class="form-control" asp-for="@Model.Title"></input>
                <span class="text-danger" asp-validation-for="@Model.Title"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.LogoFile" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Logo</label>
                <input class="form-control" asp-for="@Model.LogoFile"></input>
                <span class="text-danger" asp-validation-for="@Model.LogoFile"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ServicesCategoryİd" class="form-label">Category</label>
                <select class="form-control mb-3" aria-label="Default select example" asp-for="@Model.ServicesCategoryİd">
                    <option selected>Select category</option>
                    @foreach (var item in ViewBag.Category)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.ServicesCategoryİd" class="text-danger"></span>
            </div>
        </div>
        <hr>

        <div class="row justify-content-around">

            <div class="mb-3 col-lg-12">
                <label asp-for="@Model.Content" class="form-label">Content</label>
                <textarea id="editor" class="form-control" asp-for="@Model.Content" style="height:500px"></textarea>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-12">
                <label asp-for="@Model.PageFile" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Image</label>
                <input class="form-control" asp-for="@Model.PageFile"></input>
                <span class="text-danger" asp-validation-for="@Model.PageFile"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </form>


</div>