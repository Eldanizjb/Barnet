
@{
    ViewData["Title"] = "ShoppingCart Index";
}

<!-- Page title -->
<section class="page-title" style="background-image:url(images/background/3.jpg)">
    <div class="container">
        <div class="outer-box">
            <h1>Cart Page</h1>
            <ul class="bread-crumb clearfix">
                <li><a href="~/index.html">Home</a></li>
                <li class="active">Cart Page</li>
            </ul>
        </div>
    </div>
</section>


<!--Cart Section-->
<section class="cart-section sp-two">
    <div class="container">

        <!--Cart Outer-->
        <div class="cart-outer">
            <div class="table-outer">
                <table class="cart-table">
                    <thead class="cart-header">
                        <tr>
                            <th class="prod-column">Product</th>
                            <th>&nbsp;</th>
                            <th class="price">Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td colspan="2" class="prod-column">
                                <div class="column-box">
                                    <figure class="prod-thumb"><a href="~/#"><img src="~/images/resource/products/thumb-1.jpg" alt=""></a></figure>
                                    <h3 class="prod-title">Multi-Way Ultra Crop Top</h3>
                                </div>
                            </td>
                            <td class="price">$50.00</td>
                            <td class="qty"><input class="quantity-spinner" type="text" value="2" name="quantity"></td>
                            <td class="sub-total">$100.00</td>
                            <td class="remove"><a href="~/#" class="remove-btn"><span class="icon-unchecked"></span></a></td>
                        </tr>

                        <tr>
                            <td colspan="2" class="prod-column">
                                <div class="column-box">
                                    <figure class="prod-thumb"><a href="~/#"><img src="~/images/resource/products/thumb-2.jpg" alt=""></a></figure>
                                    <h3 class="prod-title">Winter Walking Shoes</h3>
                                </div>
                            </td>
                            <td class="price">$60.00</td>
                            <td class="qty"><input class="quantity-spinner" type="text" value="2" name="quantity"></td>
                            <td class="sub-total">$12.00</td>
                            <td class="remove"><a href="~/#" class="remove-btn"><span class="icon-unchecked"></span></a></td>
                        </tr>

                        <tr>
                            <td colspan="2" class="prod-column">
                                <div class="column-box">
                                    <figure class="prod-thumb"><a href="~/#"><img src="~/images/resource/products/thumb-3.jpg" alt=""></a></figure>
                                    <h3 class="prod-title">Side-Tie Tank</h3>
                                </div>
                            </td>
                            <td class="price">$40.00</td>
                            <td class="qty"><input class="quantity-spinner" type="text" value="1" name="quantity"></td>
                            <td class="sub-total">$40.00</td>
                            <td class="remove"><a href="~/#" class="remove-btn"><span class="icon-unchecked"></span></a></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="coupon-outer clearfix">
                <div class="pull-left">
                    <div class="apply-coupon clearfix">
                        <div class="form-group clearfix">
                            <input type="text" name="coupon-code" value="" placeholder="Enter Coupon Code...">
                        </div>
                        <div class="form-group clearfix">
                            <button type="button" class="theme-btn coupon-btn">Apply Coupon</button>
                        </div>
                    </div>
                </div>

                <div class="pull-right">
                    <button type="button" class="theme-btn cart-btn">Update Cart</button>
                </div>

            </div>


            <div class="row clearfix">
                <div class="column col-lg-6 col-md-12 col-sm-12">
                    <div class="shipping-form">
                        <div class="title-box"><h2>Calculate Shipping</h2></div>
                        <form method="post" action="http://html.commonsupport.xyz/2019/Barnet/index.html">
                            <div class="row clearfix">
                                <!--Form Group-->
                                <div class="form-group col-lg-12 col-md-12 col-sm-12">
                                    <select name="country" class="custom-select-box">
                                        <option>United Kingdom (UK)</option>
                                        <option>Pakistan</option>
                                        <option>USA</option>
                                        <option>CANADA</option>
                                        <option>INDIA</option>
                                    </select>
                                </div>
                                <!--Form Group-->
                                <div class="form-group col-lg-6 col-md-6 col-sm-12">
                                    <input type="text" name="state" value="" placeholder="State / Country">
                                </div>
                                <!--Form Group-->
                                <div class="form-group col-lg-6 col-md-6 col-sm-12">
                                    <input type="text" name="code" value="" placeholder="Zip / Postal Code">
                                </div>
                                <!--Form Group-->
                                <div class="form-group col-lg-12 col-md-12 col-sm-12">
                                    <button type="submit" class="theme-btn total-btn">Update Totals</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="column col-lg-6 col-md-12 col-sm-12">
                    <div class="title-box"><h2>Cart Totals</h2></div>
                    <!--Totals Table-->
                    <ul class="totals-table">
                        <li class="clearfix"><span class="col col-title">Cart Subtotal</span><span class="col">$146.00</span></li>
                        <li class="clearfix"><span class="col col-title">Shipping and Handling</span><span class="col">Free Shipping</span></li>
                        <li class="clearfix"><span class="col col-title">Order Total</span><span class="col">$146.00</span></li>
                    </ul>
                    <div class="text-right"><button type="submit" class="theme-btn checkout-btn">Proceed to Checkout </button></div>
                </div>

            </div>


        </div>

    </div>
</section>

<!-- Subscribe section -->
<section class="subscribe-section">
    <div class="container">
        <div class="outer-box">
            <div class="row">
                <div class="title-column col-lg-6">
                    <h2>Subscribe <br>to Our Newsletter</h2>
                </div>
                <div class="subscribe-form col-lg-6">
                    <form method="post" action="http://html.commonsupport.xyz/2019/Barnet/contact.html">
                        <div class="form-group">
                            <input type="email" name="email" value="" placeholder="Your email..." required="">
                            <button type="submit" class="theme-btn btn-style-six">Subscribe Now</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

